<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@drawable/action_bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/action_bar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/details_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Title: "
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/details_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/details_title_label"
                android:textSize="16sp"
                tools:text="Title" />

            <TextView
                android:id="@+id/details_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                tools:text="Priority" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2f85c5" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/details_note_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Note: "
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/details_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/details_note_label"
                android:textSize="16sp"
                tools:text="Note" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2f85c5" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/details_date_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/round_alarm_black_24"
                android:fontFamily="sans-serif-medium"
                android:text=": "
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/details_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/details_date_time_label"
                android:textSize="16sp"

                tools:text="Date" />


        </RelativeLayout>

        <View
            android:id="@+id/date_time_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2f85c5" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/details_alarm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/round_notification_important_black_24"
                android:fontFamily="sans-serif-medium"
                android:text=": "
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/details_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/details_alarm_label"
                android:textSize="16sp"
                tools:text="Alarm" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#2f85c5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/text_background"
            android:minHeight="250dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/details_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="16sp"
                tools:text="Description" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>